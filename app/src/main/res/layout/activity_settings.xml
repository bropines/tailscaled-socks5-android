<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/settings_title"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Banner Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                     <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_force_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/force_bg_title" 
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- GENERAL -->
            <TextView
                android:id="@+id/header_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="General"
                android:textColor="?attr/colorPrimary"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/container_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/auth_key_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/auth_key"
                    app:endIconMode="custom"
                    app:boxBackgroundColor="?attr/colorSurface"
                    android:layout_marginBottom="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/auth_key"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hostname"
                    app:boxBackgroundColor="?attr/colorSurface"
                    android:layout_marginBottom="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hostname"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/login_server"
                    app:boxBackgroundColor="?attr/colorSurface"
                    app:helperText="Optional (Headscale)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_server"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                app:dividerColor="?attr/colorOutlineVariant"
                android:alpha="0.5"/>

            <!-- NETWORK -->
            <TextView
                android:id="@+id/header_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Routing"
                android:textColor="?attr/colorPrimary"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:paddingHorizontal="24dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/container_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/sw_accept_routes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sw_accept_routes" 
                    android:paddingVertical="8dp"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/sw_accept_dns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sw_accept_dns"
                    android:paddingVertical="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/socks5_addr"
                    app:boxBackgroundColor="?attr/colorSurface"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/socks5_addr"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                app:dividerColor="?attr/colorOutlineVariant"
                android:alpha="0.5"/>

            <!-- EXIT NODE -->
            <TextView
                android:id="@+id/header_exit_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit Node"
                android:textColor="?attr/colorPrimary"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:paddingHorizontal="24dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:id="@+id/container_exit_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/sw_advertise_exit_node"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sw_advertise_exit_node"
                    android:paddingVertical="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/exit_node_ip"
                    app:boxBackgroundColor="?attr/colorSurface"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/exit_node_ip"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_history_24"
        android:contentDescription="Restart Service"
        app:backgroundTint="?attr/colorPrimaryContainer"
        app:tint="?attr/colorOnPrimaryContainer"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>