<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Settings"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginBottom="24dp"/>

        <!-- SOCKS5 Field -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="SOCKS5 Listen Address"
            app:helperText="Local proxy address (e.g. 127.0.0.1:1055)"
            app:startIconDrawable="@android:drawable/ic_menu_directions">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/socks5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="0.0.0.0:1055" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SSH/HTTP Field -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="SSH Server Address"
            app:helperText="Secondary port for SSH (e.g. 0.0.0.1:1056)"
            app:startIconDrawable="@android:drawable/ic_lock_lock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sshserver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="0.0.0.0:1056" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Auth Key Field -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Auth Key"
            app:endIconMode="clear_text"
            app:helperText="tskey-auth-..."
            app:startIconDrawable="@android:drawable/ic_menu_view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/authkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_get_key"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="32dp"
            android:text="Get key from Tailscale Console" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Start"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <TextView
            android:id="@+id/status_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Status: Stopped"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>