<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E1E1E">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Terminal"
            app:titleTextColor="#FFFFFF"
            app:navigationIcon="@drawable/ic_baseline_arrow_back"
            app:navigationIconTint="#FFFFFF"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Output Area -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:fillViewport="true">
        
        <TextView
            android:id="@+id/output_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="#00FF00"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:text="Welcome to Tailscale Sandbox...\n$ "/>
    </ScrollView>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:indicatorColor="#00FF00"
        app:trackColor="#1E1E1E"/>

    <!-- Quick Actions / Presets -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/presets_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">
            <!-- Dynamic buttons will be added here -->
            <Button
                android:id="@+id/btn_add_preset"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="+ Add Preset"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="#2D2D2D">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ "
            android:fontFamily="monospace"
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/input_command"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="type command..."
            android:textColorHint="#555555"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/btn_run"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_play"
            app:tint="#00FF00"/>
    </LinearLayout>

</LinearLayout>